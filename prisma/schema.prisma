// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator bridg {
  provider = "bridg"
  api      = "http://127.0.0.1:50662/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id      String @id @default(cuid())
  level   Level
  message String
  meta    Json
}

enum Level {
  Info
  Warn
  Error
}
